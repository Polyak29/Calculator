<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        script(src="prototype.js", defer=true.toString())
        link(rel="stylesheet", href="main.css")
        title Culc
    body
        .calculator
            .calculator__display
                .calculator__display-types
                    button(class="calculator__display-types--size") ≡ 
                .calculator__display-input
                    input(type="text",value=" ", pattern="^[ 0-9]+$", disabled class="calculator__display-input--shadow")
                    input(type="text",value="0", pattern="^[ 0-9]+$", disabled class="calculator__display-input--size")
                    input(type="hidden" pattern="^[ 0-9]+$", disabled class="calculator__display-input--hidden")
                    input(type="text",value=" ", pattern="^[ 0-9]+$", disabled class="calculator__display-input--memory")
                .calculator__display-memory.memory-calculator
                    .memory-calculator__operations
                        button(class="memory-calculator__operations--size" name="memoryClean") MC
                    .memory-calculator__operations
                        button(class="memory-calculator__operations--size" name="memoryRead") MR
                    .memory-calculator__operations
                        button(class="memory-calculator__operations--size" name="memoryAdd") M+
                    .memory-calculator__operations
                        button(class="memory-calculator__operations--size" name="memorySub") M-
                    .memory-calculator__operations
                        button(class="memory-calculator__operations--size" name="memorySave") MS
                    .memory-calculator__operations
                        button(class="memory-calculator__operations--size") M
            .calculator__keyboard
                .calculator__keyboard-container     
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="percent") %
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="sqrt") √
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="exponentiation") x <sup>n</sup>
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="fraction") <sup>1</sup>/x
                .calculator__keyboard-container            
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="cleanElement") CE
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="clean") C
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="remove") ⇐
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="toSplit") ÷
                .calculator__keyboard-container        
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--number" value="7") 7
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--number" value="8") 8
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--number" value="9") 9
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="multiply") ×
                .calculator__keyboard-container
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--number", value="4") 4
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--number", value="5") 5
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--number", value="6") 6
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name='substract') -
                .calculator__keyboard-container
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--number", value="1") 1
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--number", value="2") 2
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--number", value="3") 3
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name='add') +
                .calculator__keyboard-container
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="change") ±
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--number", value="0") 0
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="comma") ,
                    .calculator__keyboard-button
                        button(class="calculator__keyboard-button--operation", name="result") =
                
                


            